{
  "expo": {
    "name": "ArcHive",
    "slug": "arc-hive",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo-arc-hive-final.png",
    "scheme": "mymind",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-arc-hive-final.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo-arc-hive-final.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo-arc-hive-final.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#4A90E2"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
